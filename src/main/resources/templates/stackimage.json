{
  "name": "$STACK_NAME",
  "image": "$IMAGE",
  "credentialId": $CREDENTIAL_ID,
  "region": "$REGION",
  "availabilityZone": ${AVAILABILITYZONE == null ? 'null' : "\"$AVAILABILITYZONE\""},
  "onFailureAction": "$ON_FAILURE",
  "failurePolicy": {
    "threshold": $THRESHOLD,
    "adjustmentType": "$ADJUSTMENTTYPE"
  },
  "instanceGroups": [$GROUPS],
  "networkId": $NETWORK_ID,
  "parameters": $PARAMETERS,
  "platformVariant": "$PLATFORM_VARIANT",
  "securityGroupId": $SECURITY_GROUP
}
